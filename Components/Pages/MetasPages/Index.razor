@page "/Index"

@inject MetasService metasService
@rendermode InteractiveServer


<div class="card">
    <div class="card-header">
        <h3>Consulta Metas</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">MetaId</th>
                    <th scope="col">Descripci&oacute;n</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Monto</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var meta in metas)
                {
                    <tr>
                        <td scope="row" >@meta.MetaId</td>
                        <td scope="row" >@meta.Descripcion</td>
                        <td scope="row" >@meta.Fecha</td>
                        <td scope="row" >@meta.Monto.ToString("N2")</td>
                        <td>
                            <a href="/Eliminar/@meta.MetaId" class="bi bi-trash btn btn-outline-danger">Eliminar</a>
                            <a href="/Editar/@meta.MetaId" class="bi bi-pencil btn btn-outline-info">Editar</a>
                            <a href="/Detalles/@meta.MetaId" class="bi bi-card-text btn btn-outline-dark">Detalles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <a href="/" class="bi bi-arrow-90deg-left btn btn-outline-info">Atras</a>
    </div>
</div>
@code {
    List<Metas> metas = new List<Metas>();

    protected override async Task OnInitializedAsync()
    {
        metas = await metasService.GetMetas(d => true);
    }
}
